<div class="bio-page">
  <div class="chef-view">
    <h1><%= @user.name %></h1>
    <p class="bio"> <%= @user.bio %> </p>
    <p>Contact: <%= @user.email %></p>
    </div>

    <div class= "attributes" id="cuisine">
      <h4>Cuisines:</h4>
      <ul>
        <% @user.cuisines.each do |cuisine| %>
          <li><%= cuisine.food %></li>
        <% end %>
      </ul>
    </div>
    <div class= "attributes" id="rating_bio">
      <% unless current_user == @user %>
        <h3 class= "ratings">Leave a rating!</h3>
        <%= rating_for @user, 'chef', enable_half: true, half_show: true, disable_after_rate: true  %>
      <% end%>
    </div>

    <div class= "attributes" id="price_bio">
      <h4>Price:</h4>
        <%= @user.price_per_head %>
    </div>

    <div class= "attributes" id="caters_bio">
      <h4>Cater for:</h4>
        <%= @user.max_party_size %></div>

  <div class="portrait" style="background-image:url(<%= image_path(@user.avatar) %>)"></div>

  <div id="gallery-banner">
      <div id="gallery">
        <%@user.images.each do |pic| %>
          <%= image_tag(pic.picture.url) %>
        <% end %>
      </div>
  </div>

</div>
